<% provide(:title, @user.name) %>
<div class="flex-container">
  <div class="flex-grow-1">
    <%= gravatar_for @user %>
  </div>
  <div style="flex-grow: 8" class ="bg-dark pl-2">
       <h4 class="WorkoutName-s">
         <%= @user.name.upcase %>
       </h4>
       <div class="user-profile">
         <div class="user-date"><%= date_reformat @user.activated_at %></div>
         <div class="user-rank">Wack Newbie</div>
       </div>
  </div>
</div>

<div class="d-flex justify-content-center mb-6">
  <div class="bigcircle mr-5">
    <%= @attempts.count %>
    <div class="user_score">LIFETIME WACKS</div>
  </div>

  <!--very hacky to get the names on 2 lines (not 1 or 3) -->
  <div class="bigcircle">
    <%= @attslw.count %><div class="user_score">WACKS LAST<span class="pl-1">WEEK</span></div>
  </div>
  <div class="bigcircle ml-5">
    ??<div class="user_score">WACK SCORE</div>
  </div>
</div>

<div class="panel-group" id="accordion">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1">Reiews (<%= @user.microposts.count %>)</a>
      </h4>
    </div>
    <div id="collapse1" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class = "container mt-3">
        <% if @user.microposts.any? %>
          <ol class="microposts">
            <%= render @microposts, setting: "usernameno" %>
          </ol>
          <%= will_paginate @microposts %>
        <% end %>
      </div>
    </div>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapse2">Wacks (<%= @user.attempts.count %>)</a>
      </h4>
    </div>
    <div id="collapse2" class="panel-collapse collapse in">
    <div class="panel-body">
      <div class = "container">
        <% if @user.attempts.any? %>
          <ol class="attempts">
            <%= render @attempts%>
          </ol>
          <%= will_paginate @attempts %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
