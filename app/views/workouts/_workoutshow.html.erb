    <div class="p-flex">
      <div class = "container">
        <div class="row bg-dark px-1 pt-2 pb-1 text-center">
          <div class ="col-12">
            <h4 class="WorkoutName-s">
              <%= link_to workoutshow.name.upcase, workoutshow%>
            </h4>
          </div>
        </div>
      </div>

      <div class = "container bg-light px-1 pt-1 pb-1 text-center">
          <div class="brand-s">BY <%= workoutshow.brand ? workoutshow.brand.upcase : "BRAND" %></div>
      </div>

      <div class="container mb-2">
         <div class="row bg-light py-1">
          <div class ="col-12">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe class="embed-responsive-item" src=<%= workoutshow.url %> allowfullscreen></iframe>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
         <div class="row bg-light">
          <div class ="col-8">
              <div class="wkstyle-s">Style: <%= workoutshow.style %></div>
              <div class="wkstyle-s">Focus: <%= workoutshow.bodyfocus %></div>
              <div class="wkstyle-s">Equipment: <%= workoutshow.equipment ? workoutshow.eqpitems : "None"%></div>
              <div class="wkstyle-s">Level: <%= workoutshow.intensity%></div>
              <div class="wkstyle-s">Duration: <%= "#{workoutshow.length} minutes"%></div>
          </div>

          <div class ="col-4">
            <div id="favourite_form">
              <% if current_user.wkfollowing?(workoutshow) %>
                <%= form_for(current_user.rel_user_workouts.find_by(workout_id: workoutshow.id),
                             html: { method: :delete }) do |f| %>
                     <%= button_tag type: 'submit', class: "btn btn-heart" do %>
                         <i class="fa fa-heart" aria-hidden="true"></i>
                     <% end %>
                  <%#= f.submit "Unfollow", class: "btn" %>
                <% end %>
              <% else %>
                <%= form_for(current_user.rel_user_workouts.build) do |f| %>
                  <div><%= hidden_field_tag :workout_id, workoutshow.id %></div>
                  <%= button_tag type: 'submit', class: "btn btn-heart" do %>
                      <i class="fa fa-heart-broken" aria-hidden="true"></i>
                  <% end %>

                  <%#= f.submit "Follow", class: "btn btn-primary" %>
                <% end %>
              <% end %>
            </div>

          </div>
        </div>

      </div>

      <div class="row bg-dark py-1 mx-0">
        <div class ="col-12">
           <div class="spacesays-s"><%= "\"#{workoutshow.spacesays}\""%></div>
           <div class="comment-s"><%= link_to "#{pluralize(workoutshow.microposts.count, "comment")}", workoutshow%></div>
        </div>
      </div>

      <div class="container bg-light px-1 mt-3">
         <div class="row bg-light py-1 mx-0">
          <div class ="col-12">
             <% if setting == "addcommentyes" %>
             <section class="mt-1"><%= render 'shared/micropost_form' %></section>
             <% end %>
          </div>
        </div>
      </div>

      <div class="row bg-dark py-1 mx-0">
        <div class ="col-12">
           <div class="comment-s"><%= link_to "#{pluralize(workoutshow.attempts.count, "attempt")}", current_user%></div>
        </div>
      </div>

      <div class="container bg-light px-1 mt-3">
         <div class="row bg-light py-1 mx-0">
          <div class ="col-12">
             <% if setting == "addcommentyes" %>
             <section class="mt-1"><%= render 'shared/attempts_form' %></section>
             <% end %>
          </div>
        </div>
      </div>

      <div class = "container bg-light p-1 mb-1">
        <% if current_user && current_user.admin? %>
        <div class="p-edit pl-0"><%= link_to 'Edit', edit_workout_path(workoutshow), class: "admin" %></div>
        <div class="p-edit pl-0"><%= link_to 'Delete', workoutshow, method: :delete, data: { confirm: "Are you sure? All workout data for #{workoutshow.name} will be lost." }, class: "admin" %></div>
        <% end %>
      </div>

</div>
