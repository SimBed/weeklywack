<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div><%= hidden_field_tag :workout_id, params[:id] %></div>
  <div class="field">
    <%= f.text_area :content, placeholder: "Add your comment..." %>
  </div>

  <%= f.submit "Post Comment", class: "btn btn-primary btnpost" %>
<% end %>
